{% extends 'layout/base.twig' %}

{% block title %}
	Liste des Utilisateurs
{% endblock %}

{% block content %}
	<div class="container">

		<h1 class="mt-5 mb-3">Liste des Utilisateurs ğŸ“‹</h1>

		<table class="table">
			<thead>
				<tr>
					<th scope="col">Nom d'utilisateur</th>
					<th scope="col">Email</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>

						<td>
							<img src="/avatar/{{ user._id }}" alt="{{ user.username }}" width="50">
							{{ user.username }}
						</td>

						<td>
                        {{ user.email }}
                        </td>

						<td>
							<a href="/edit/{{ user._id }}" class="btn btn-warning">Modifier</a>
							<a href="/delete/{{ user._id }}" class="btn btn-danger">Supprimer</a>
						</td>

					</tr>
				{% endfor %}
			</tbody>
		</table>
        
	</div>
{% endblock %}